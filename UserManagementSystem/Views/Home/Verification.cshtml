
@{
    ViewBag.Title = "Verification";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Yinka Enoch Adedokun">
    <link rel="stylesheet" href="~/Content/Login.css">
</head>


<body>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-12 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>Verification</h2>
                    </div>
                    <div class="row">
                        <form method="post" action="" control="" class="form-group">
                            <div class="row">
                                <label class="required"> Mobile OTP</label>&emsp;
                                <input type="text"  inputmode="numeric" name="motp" id="motp" class="form__input" required>
                            </div>
                            <div class="row">
                                <label class="required"> Email OTP</label>&emsp;
                                <input type="text" inputmode="numeric" name="eotp" id="eotp" class="form__input" required>
                            </div>
                            <div class="row">
                                <input type="submit" value="Submit" class="btn">
                                @Html.ActionLink("Cancel", "Index", "Home", new { @class = "btn"})
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

