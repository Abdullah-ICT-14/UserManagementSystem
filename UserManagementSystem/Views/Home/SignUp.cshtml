@using UserManagementSystem.Models
@model User
@{
    ViewBag.Title = "SignUp";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Yinka Enoch Adedokun">
    <link rel="stylesheet" href="~/Content/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>


<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-12 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>Sign Up</h2>
                    </div>
                    <div class="row">
                        <form method="post" action="" control="" class="form-group" id="signupForm">
                            <div class="row">
                                <label class="required"> User ID</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                <input type="text" name="userid" id="userid" class="form__input" required><br />
                                @Html.ValidationMessageFor(model => model.UserId)
                            </div>

                            <div class="row">
                                <label> Employee ID</label>&emsp;&emsp;&emsp;&emsp;
                                <input type="text" name="employeeid" id="employeeid" class="form__input">
                            </div>


                            <div class="row">
                                <label class="required"> Name</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                <input type="text" name="name" id="name" class="form__input" required>
                            </div>

                            <div class="row">
                                <label class="required"> Mobile</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                <input type="tel" name="mobile" id="mobile" class="form__input" required>
                            </div>

                            <div class="row">
                                <label class="required"> Email</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                <input type="email" name="email" id="email" class="form__input" required>
                            </div>
                            <!--
    <div class="row">
        <label class="required"> Date of Birth</label>&emsp;&emsp;&emsp;
        <input type="date" name="dob" id="dob" class="form__input" required>
    </div>
        -->
                            <div class="row">
                                <label class="required"> Password</label>&emsp;&emsp;&emsp;&emsp;
                                <!-- <span class="fa fa-lock"></span> -->
                                <input type="password" name="password" id="password" class="form__input" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                                <i id="toggle-password" class="fa fa-eye"></i>
                            </div>

                            <div class="row">
                                <label class="required"> Confirm Password</label>
                                <!-- <span class="fa fa-lock"></span> -->
                                <input type="password" name="cpassword" id="cpassword" class="form__input" required>
                                <i id="ctoggle-password" class="fa fa-eye"></i>
                            </div>

                            <!--
        <div class="row">
        <div class="g-recaptcha" data-sitekey="6LcTA8IoAAAAAExhzdRT85QtzTSMr3cTJ7yOmLwO"></div>
        <br />

    </div>
    -->



                            <div class="row">


                                <input type="submit" value="Submit" class="btn"> @Html.ActionLink("Cancel", "Index", "Home", new { @class = "btn" })


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @ViewBag.Message


    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="~/Scripts/signup.js"></script>
</body>
</html>
