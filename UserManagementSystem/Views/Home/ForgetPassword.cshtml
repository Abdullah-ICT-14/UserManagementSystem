
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Yinka Enoch Adedokun">
    <link rel="stylesheet" href="~/Content/Login.css">
</head>


<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-12 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>Forget Passowrd</h2>
                    </div>
                    <div class="row">
                        <form method="post" action="" control="" class="form-group" id="forgetForm">
                            <div class="row">
                                <label class="required"> Employee ID</label>&emsp;&emsp;&emsp;&emsp;
                                <input type="text" name="employeeid" id="employeeid" class="form__input">
                            </div>
                            <div class="row">
                                <label> User ID</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                <input type="text" name="userid" id="userid" class="form__input" required>
                            </div>

                            <div class="row">
                                <label class="required"> Mobile</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                <input type="tel" name="mobile" id="mobile" class="form__input" required>
                            </div>

                           

                            <div class="row">
                                <label class="required"> Date of Birth</label>&emsp;&emsp;&emsp;
                                <input type="date" name="dob" id="dob" class="form__input" required>
                            </div>

                            <div class="row">
                                <input type="submit" value="Submit" class="btn">
                            </div>
                            <div class="row">
                                @Html.ActionLink("Cancel", "Index", "Home", new { @class = "btn" })
                            </div>
                        </form>
                </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/Forget.js"></script>
</body>
</html>