
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Yinka Enoch Adedokun">
    <link rel="stylesheet" href="~/Content/Login.css">
</head>


<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-12 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>Forget Passowrd</h2>
                    </div>
                    <div class="row">
                        <form control="" class="form-group">
                            <div class="row">
                                <input type="text" name="employeeid" id="employeeid" class="form__input" placeholder="EmployeeID" required>
                            </div>
                            <div class="row">
                                <input type="text" name="userid" id="userid" class="form__input" placeholder="UserID">
                            </div>

                            <div class="row">
                                <input type="email" name="mail" id="email" class="form__input" placeholder="Email" required>
                            </div>

                            <div class="row">
                                <input type="date" name="dob" id="dob" class="form__input" placeholder="DOB" required>
                            </div>
                            <div class="row">
                                <input type="submit" value="Submit" class="btn">
                            </div>
                            <div class="row">
                                @Html.ActionLink("Cancel", "Index", "Home", new { @class = "btn" })
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>